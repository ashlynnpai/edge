%section.container
  %h3 Latest Courses Added
  .row      
    - @courses.show_latest_courses(20).each do |course|
      .col-sm-3    
        %h3= course.name
        - if current_user
          %h5= link_to 'I completed this course', add_course_status_path(course_id: @course, :status => 'completed'), method: :post, class: 'btn btn-success'
          %h5= link_to 'I am currently on this course', add_course_status_path(course_id: @course, :status => 'current'), method: :post, class: 'btn btn-success'
